wget http://prdownloads.sourceforge.net/webadmin/webmin_1.760_all.deb
sudo dpkg --install webmin_1.760_all.deb
sudo apt-get -f install
sudo dpkg --configure -a
sudo adduser administrator
sudo nano /etc/sudoers

sudo apt-get install pdns-server pdns-backend-mysql
sudo dpkg-reconfigure pdns-backend-mysql

sudo apt-get install nginx

sudo adduser default
sudo mkdir Logs
sudo mkdir SSL
sudo mkdir Public_html
sudo mkdir Config
sudo find . -type d -exec chown default:www-data {} \;
cd ..
sudo chown root:root default/
sudo chmod 755 default/

sudo chmod +x /etc/init.d/php-fpm
sudo apt-get install apache2-utils

sudo rm pdns.simplebind.conf
sudo rm pdns.local.conf
sudo pdnssec check-zone e-ticaretal.net
sudo pdnssec rectify-zone e-ticaretal.net

sudo apt-get install postfix postfix-mysql dovecot-core dovecot-imapd dovecot-lmtpd dovecot-mysql
sudo cp /etc/postfix/main.cf /etc/postfix/main.cf.orig
sudo nano /etc/postfix/main.cf

sudo nano /etc/hostname
server1.e-ticaretal.com

sudo cp /etc/dovecot/dovecot.conf /etc/dovecot/dovecot.conf.orig
sudo cp /etc/dovecot/conf.d/10-mail.conf /etc/dovecot/conf.d/10-mail.conf.orig
sudo cp /etc/dovecot/conf.d/10-auth.conf /etc/dovecot/conf.d/10-mail.auth.orig
sudo cp /etc/dovecot/conf.d/10-master.conf /etc/dovecot/conf.d/10-master.conf.orig
sudo cp /etc/dovecot/conf.d/10-ssl.conf /etc/dovecot/conf.d/10-ssl.conf.orig
sudo cp /etc/dovecot/dovecot-sql.conf.ext /etc/dovecot/dovecot-sql.conf.ext.orig

sudo groupadd -g 5000 vmail
sudo useradd -g vmail -u 5000 vmail -d /var/mail
sudo chown -R vmail:vmail /var/mail
sudo chown -R vmail:dovecot /etc/dovecot
sudo chmod -R o-rwx /etc/dovecot
sudo chmod 775 /var/mail/vhosts
sudo mkdir -p /var/mail/vhosts/e-ticaretal.net

postmap -q e-ticaretal.net mysql:/etc/postfix/mysql-virtual-mailbox-domains.cf

sudo apt-get install spamassassin spamc
sudo adduser spamd --disabled-login

sudo cp startssl-ca-bundle.pem /usr/local/share/ca-certificates/startssl-ca-bundle.pem
sudo dpkg-reconfigure ca-certificates

sudo apt-get install opendkim

sudo service opendkim start
sudo service dovecot restart
sudo service postfix restart
sudo service spamassassin start

