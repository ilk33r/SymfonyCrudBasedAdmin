sudo apt-get install build-essential
sudo apt-get install libxml2-dev
sudo apt-get install libssl-dev
sudo apt-get install libcurl4-openssl-dev pkg-config
sudo apt-get install libbz2-dev
sudo apt-get install libjpeg-dev
sudo apt-get install libpng12-dev
sudo apt-get install libxpm-dev
sudo apt-get install libfreetype6-dev
sudo apt-get install libc-client-dev
sudo apt-get install libmcrypt-dev
sudo apt-get install libtidy-dev

sudo ./configure --prefix=/usr/local/php/php5.6.11 \
--disable-fileinfo --enable-bcmath \
--enable-calendar --enable-ftp --enable-libxml --enable-mbstring --enable-pdo=shared --enable-sockets \
--enable-zip --with-curl --with-gettext --with-mcrypt --with-mysqli --with-mysql --with-pdo-mysql=shared \
--with-openssl --with-pcre-regex --with-pic --with-pdo-sqlite=shared \
--with-zlib --with-gd --enable-gd-native-ttf --enable-gd-jis-conv --with-jpeg-dir=/usr/lib --with-png-dir=/usr/lib \
--with-bz2 --with-xpm-dir=/usr/lib --with-kerberos --enable-soap --with-freetype-dir=/usr/include/freetype2 \
--without-t1lib --enable-pcntl --enable-sysvmsg --enable-sysvsem --enable-sysvshm -with-tsrm-pthreads \
--enable-exif --with-iconv-dir --with-imap --with-imap-ssl --with-mhash --enable-wddx --with-xmlrpc --with-tidy \
--enable-opcache --enable-fpm --with-imap \
--enable-maintainer-zts


# extension
sudo ./configure --prefix=/usr/local/php/php5.6.11 \
--with-pdo-mysql=shared