{% trans_default_domain 'FOSUserBundle' %}
{% block subject %}
{% autoescape false %}
subject = "{{ siteName ~ ' Üyelik Onayı'|trim('"') }}"
{% endautoescape %}
{% endblock %}

{% block body_text %}
{% autoescape false %}
bodyText = "Merhaba {{ user.realName|trim('"') }} {{ user.realSurname|trim('"') }};
{{ siteName|trim('"') }} üyeliginizi onaylamak için asagıdaki URL'yi kopyalayıp tarayıcınıza yapıstırınız.

{{ confirmationUrl }}"
{% endautoescape %}
{% endblock %}

{% block body_html %}
